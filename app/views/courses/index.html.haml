%table.table-responsive
  %thead.thead.t-custom
    %tr
      %th Title
      %th Description
      %th User
      %th Date created
      %th Level
      %th Price
      %th Lessons
      %th
      %th
      %th

  %tbody
    - @courses.each do |course|
   
      %tr
        %td= link_to course.title, course_path(course) 
        %td= course.description
        %td= course.user
        %td= course.created_at.strftime('%d-%b-%Y')
        %td= course.level
        %td= number_to_currency(course.price)
        %td= course.lessons.count
        %td= link_to 'Show', course, class: 'btn btn-sm btn-primary'
        %td= link_to 'Edit', edit_course_path(course), class: 'btn btn-sm btn-warning' if policy(course).edit?
        %td= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-sm btn-danger' if policy(course).destroy?

